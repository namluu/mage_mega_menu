<?xml version="1.0"?>
<config>
    <tabs>
        <bluecom translate="label" module="megamenu">
            <label>Bluecom</label>
            <sort_order>150</sort_order>
        </bluecom>
    </tabs>
    <sections>
        <megamenu translate="label" module="megamenu">
            <label>Mega Menu</label>
            <tab>bluecom</tab>
            <frontend_type>text</frontend_type>
            <sort_order>200</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label">
                    <label>General</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <expanded>1</expanded>
                    <fields>
                        <enabled translate="label">
                            <label>Enable</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <max_level translate="label">
                            <label>Menu depth</label>
                            <comment><![CDATA[e.g. 1, 2, 3, 4. Set "0" to disable limits. For example, if you set this value to 2, only second level categories will be displayed]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </max_level>
                        <show_home_link translate="label">
                            <label>Show "Home" link</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>15</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </show_home_link>
                        <display_empty_categories translate="label comment">
                            <label>Show empty categories</label>
                            <comment><![CDATA[Display empty category which not have any products]]></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </display_empty_categories>

                    </fields>
                    <comment><![CDATA[If You Want to Display custom block with images or other html content in Menu Block, use the <b>Static Block</b> (<strong>CMS->Static Blocks</strong> section) with the ID like "<b>mgmenu_CategoryId</b>", In Place "CategoryId" provide the ID of the category in which you want to display the block.e.g. mgmenu_28, mgmenu_100,...<br /><br />]]></comment>
                </general>
                <columns translate="label">
                    <label>Columns</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>15</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <count translate="label comment">
                            <label>Number of columns</label>
                            <comment><![CDATA[The maximum number of columns in the sub-menu, <br />e.g. 1, 2, 3]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </count>
                        <litmit_row translate="label comment">
                            <label>Number of rows</label>
                            <comment><![CDATA[The maximum number of row in the sub-menu, <br />e.g. 1, 2, 3]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </litmit_row>
                        <divided_horizontally translate="label comment">
                            <label> Subcategories left to right</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </divided_horizontally>
                        <integrate translate="label comment">
                            <label>Merge subcategories</label>
                            <comment>Merge all small subcategory lists into one column, except the left categories</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>7</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </integrate>
                    </fields>
                </columns>
            </groups>
        </megamenu>
    </sections>
</config>